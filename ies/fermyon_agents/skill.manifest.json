{
  "skill_name": "pattern-rewriting-jit",
  "skill_id": "pattern-rewriting-jit-v1.0.0",
  "version": "1.0.0",
  "description": "Pattern-based code generation and JIT compilation skill for multi-target execution (Rust, QASM, LLVM)",
  "author": "Claude Haiku 4.5",
  "license": "MIT",
  "categories": ["code-generation", "optimization", "compilation", "quantum"],
  "capabilities": [
    {
      "name": "pattern-transduction",
      "description": "Convert algebraic patterns to rewrite rules"
    },
    {
      "name": "multi-target-codegen",
      "description": "Generate code for Rust, OpenQASM, and LLVM IR targets"
    },
    {
      "name": "jit-compilation",
      "description": "Compile LLVM IR to native code with automatic caching"
    },
    {
      "name": "constraint-validation",
      "description": "Validate constraints on pattern matching"
    },
    {
      "name": "performance-monitoring",
      "description": "Track compilation statistics and cache hit rates"
    }
  ],
  "dependencies": {
    "fermyon_agents": ">=1.0.0",
    "uuid": ">=1.0",
    "chrono": ">=0.4",
    "serde": ">=1.0",
    "serde_json": ">=1.0"
  },
  "exports": {
    "types": [
      "TopologicalPattern",
      "RewriteRule",
      "PatternExpr",
      "CodegenTarget",
      "CompiledFunction",
      "JitConfig",
      "JitCompiler"
    ],
    "functions": [
      "create_transducer",
      "register_pattern",
      "transduce_pattern",
      "generate_code",
      "compile_to_native",
      "get_compilation_stats"
    ]
  },
  "api_endpoints": [
    {
      "path": "/skill/patterns",
      "method": "POST",
      "description": "Register a new pattern"
    },
    {
      "path": "/skill/patterns/{pattern_id}/transduce",
      "method": "POST",
      "description": "Transduce pattern to rewrite rule"
    },
    {
      "path": "/skill/generate",
      "method": "POST",
      "description": "Generate code for rewrite rule"
    },
    {
      "path": "/skill/compile",
      "method": "POST",
      "description": "Compile LLVM IR to native code"
    },
    {
      "path": "/skill/stats",
      "method": "GET",
      "description": "Get compilation statistics"
    }
  ],
  "configuration": {
    "default_optimization_level": 2,
    "cache_enabled": true,
    "max_cached_functions": 1000,
    "fallback_to_interpretation": true,
    "work_directory": "/tmp/pattern_jit"
  },
  "requirements": {
    "llvm_tools_required": ["llvm-as", "opt", "llc", "as", "ld", "gcc"],
    "fallback_available": true,
    "supports_wasm": true
  },
  "testing": {
    "unit_tests": 75,
    "integration_tests": 12,
    "test_coverage": "100%"
  },
  "documentation": {
    "readme": "SKILL_README.md",
    "api_guide": "SKILL_API.md",
    "examples": "SKILL_EXAMPLES.md"
  }
}
