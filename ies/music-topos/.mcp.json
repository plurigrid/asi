{
  "mcpServers": {
    "gay": {
      "command": "julia",
      "args": ["--project=@gay", "-e", "using Gay; Gay.serve_mcp()"],
      "env": {
        "GAY_SEED": "1069"
      }
    },
    "glass-bead-game": {
      "command": "ruby",
      "args": ["-I", "lib", "-r", "glass_bead_game", "-e", "GlassBeadGame.serve_mcp"]
    },
    "firecrawl": {
      "command": "npx",
      "args": ["-y", "firecrawl-mcp"],
      "env": {
        "FIRECRAWL_API_KEY": "${FIRECRAWL_API_KEY}"
      }
    },
    "exa": {
      "command": "npx",
      "args": ["-y", "@anthropic/exa-mcp-server"],
      "env": {
        "EXA_API_KEY": "${EXA_API_KEY}"
      }
    },
    "tree-sitter": {
      "command": "uvx",
      "args": ["mcp-tree-sitter"]
    },
    "skillz": {
      "command": "uvx",
      "args": ["mcp-skillz"]
    },
    "localsend": {
      "command": "node",
      "args": ["/Users/bob/ies/music-topos/packages/localsend-mcp/dist/index.js"]
    },
    "unifier": {
      "command": "python3",
      "args": ["/Users/bob/ies/unifier_mcp_server.py"],
      "env": {
        "PYTHONUNBUFFERED": "1"
      }
    },
    "deepwiki": {
      "url": "https://mcp.deepwiki.com/mcp"
    }
  }
}
